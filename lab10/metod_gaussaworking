#include <stdio.h>

int main()
{
   float maxElement;
   float matrix[3][3]={{2.5,-3.12,-4.03},
                      {0.61,0.71,-0.05},
                      {-1.03,-2.05,0.87}};
   float matrixsv[1][3]={-7.5,0.44,-1.16};
   float matrixFull[3][4]={{2.5,-3.12,-4.03,-7.5},
                           {0.61,0.71,-0.05,0.44},
                           {-1.03,-2.05,0.87,-1.16}};
   int i,j;
   
        for(i=0;i<3;i++){
            j=0;
            maxElement=1e-10;
            if(matrixFull[i][j]>maxElement) 
            maxElement=matrixFull[i][j];
            printf("maxElement[%d][%d]=%f\n",i,j,maxElement);
        }

    return 0;
}
